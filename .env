OLLAMA_BASE_URL=http://localhost:11434
# Typhoon is the best Thai LLM - choose based on your RAM:
# typhoon-v1.5x-70b-instruct (best quality, needs ~40GB RAM)
# typhoon-v1.5-8b-instruct (good quality, needs ~8GB RAM)
# seallm3:8b (alternative, good Thai support)
OLLAMA_MODEL=seallm3:8b
# BGE-M3: Best multilingual embedding model for Thai (1024 dim)
EMBED_MODEL=BAAI/bge-m3
DATA_DIR=./data/documents
INDEX_DIR=./storage/index
VECTOR_STORE_TYPE=chroma
CHROMA_PERSIST_DIR=./storage/chroma
CHROMA_COLLECTION=credit_policies
